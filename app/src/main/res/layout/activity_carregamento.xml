<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carregamento">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#ff0000"
        android:layout_marginBottom="20dp"
        android:text="Carregando imagens dinamicamente"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imgDinamica"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARREGAR IMAGEM"
        android:layout_gravity="center"
        app:cornerRadius="5dp"
        android:backgroundTint="#ff0000"
        app:icon="@drawable/recarregar"
        android:onClick="CarregarImagem"
        />

    <EditText
        android:id="@+id/txtURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cole sua url aqui"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />


</LinearLayout>