<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuSpotfy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#132E05"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:background="#132E05">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:backgroundTint="#5B0B0B"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="Tudo"
                android:textSize="15dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:backgroundTint="#8A0F0F"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="Musicas"
                android:textSize="15dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:backgroundTint="#5B0B0B"
                android:layout_gravity="center"
                android:text="Podcasts"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="ALBUNS DO ARTISTA"
            android:textStyle="bold"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            app:cornerRadius="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:backgroundTint="#5B0B0B"
                android:layout_gravity="center"
                app:cornerRadius="0dp"

                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/logo_ite"
                    app:cornerRadius="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:text="Caetano Veloso 1968"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#5B0B0B"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_caetano_2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:text="Efertorio"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#5B0B0B"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_caetano_3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:fontFamily="cursive"
                    android:textColor="#fff"
                    android:layout_margin="10dp"
                    android:text="Estrangeiro 1989"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#5B0B0B"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_caetano_4"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montez"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="Transa"
                    android:textColor="#fff"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#5B0B0B"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_caetano_5"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montez"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:text="Transa"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>