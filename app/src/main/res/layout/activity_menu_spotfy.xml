<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuSpotfy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="20dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/play_music_foreground"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/fundo_card"
            android:backgroundTint="#1AFFFFFF"
            android:layout_gravity="center"
            android:gravity="center"
            app:cornerRadius="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3" />
            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                app:icon="@drawable/search_1"
                app:iconTint="#80FFFFFF" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Pesquise musicas e muito mais"
                android:padding="10dp"
                android:textColorHint="#80FFFFFF"
                android:textSize="10dp"
                app:cornerRadius="5dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:background="#000000">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:backgroundTint="#27FF0000"
                android:layout_gravity="center"
                app:cornerRadius="5dp"
                android:layout_marginRight="10dp"
                android:text="Tudo"
                android:textSize="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:backgroundTint="#65FD0000"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:cornerRadius="5dp"
                android:text="Musicas"
                android:textSize="15dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:backgroundTint="#25FF0000"
                android:layout_gravity="center"
                app:cornerRadius="5dp"
                android:text="Podcast"
                android:textSize="10dp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:fontFamily="@font/aclonica"
            android:textColor="#fff"
            android:gravity="center"
            android:text="ALBUNS DO ARTISTA"
            android:textStyle="bold"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            app:cornerRadius="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:backgroundTint="#7F595959"
                android:layout_gravity="center"
                app:cornerRadius="0dp"
                android:layout_margin="10dp"
                android:onClick="btnPlayMusic"
                tools:ignore="OnClick">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/pitty_1_foreground"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:text="Admiravel chip novo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#7F595959"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/pitty_2_foreground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:text="AnacrÃ´nico"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#7F595959"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/pitty_3_foreground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:fontFamily="cursive"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:text="Pulsos"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#7F595959"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/pitty_4_foreground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montez"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="25dp"
                    android:text="Espelhos"
                    android:textColor="#fff"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fundo_card"
                android:padding="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#7F595959"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/pitty_5_foreground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montez"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:text="Pitty diva"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>